model Brand {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  slug      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Category {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  slug          String     @unique
  parentId      String?    @db.ObjectId
  parent        Category?  @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  subCategories Category[] @relation("CategoryToCategory")
  products      Product[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Product {
  id                 String              @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  slug               String              @unique
  description        String?
  batchNumber        String?
  barCode            String?             @unique
  image              String?             @default("https://ivxko3ip9t.ufs.sh/f/pPWHuAoMhZpriY8ps1trV8Rf6Nuxwa5KtGMoS9WZm1b3L4hP")
  alertQty           Int?
  stockQty           Int?                @default(0)
  sku                String?             @unique
  productCode        String?             @unique
  brandId            String?             @db.ObjectId
  categoryId         String?             @db.ObjectId
  brand              Brand?              @relation(fields: [brandId], references: [id])
  category           Category?           @relation(fields: [categoryId], references: [id])
  expiryDate         DateTime?
  unitType           Unit                @default(piece)
  saleItem           SaleItem[]
  purchaseOrderItems PurchaseOrderItem[]
  adjustmentItem     AdjustmentItem[]
  // purchaseOrders     ProductToPurchaseOrder[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

